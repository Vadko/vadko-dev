---
import Layout from '../layouts/Layout.astro';

const technologies: string[] = [
  'React Native', 'Expo', 'TypeScript', 'JavaScript', 'Reanimated', 
  'Supabase', 'Node.js', 'Electron', 'Docker', 'Git', 'Bash', 'CI/CD'
];

const nativeLanguages: string[] = ['Java', 'Kotlin', 'Swift', 'Objective-C'];

const mainTech: string[] = ['React Native', 'Expo', 'TypeScript', 'Reanimated', 'Java', 'Kotlin', 'Swift', 'Docker', 'Node.js'];

const cicdSkills: string[] = [
  'GitHub Actions', 'Fastlane', 'App Store Connect', 'Google Play Console',
  'TestFlight', 'Bitrise', 'EAS Build', 'EAS Submit'
];
---

<Layout title="Vadym Pohlid — Senior React Native Developer">
  <!-- Navigation -->
  <nav class="fixed top-0 left-0 right-0 z-50 bg-[#0a0a0a]/80 backdrop-blur-lg border-b border-zinc-800/50">
    <div class="max-w-5xl mx-auto px-6 py-4 flex justify-between items-center">
      <a href="#" class="text-xl font-bold text-white hover:text-blue-400 transition-colors">
        vadko<span class="text-blue-500">.dev</span>
      </a>
      
      <!-- Desktop Navigation -->
      <div class="desktop-nav flex gap-6 text-sm text-zinc-400">
        <a href="#about" class="hover:text-white transition-colors">About</a>
        <a href="#work" class="hover:text-white transition-colors">Work</a>
        <a href="#projects" class="hover:text-white transition-colors">Projects</a>
        <a href="#contact" class="hover:text-white transition-colors">Contact</a>
      </div>
      
      <!-- Mobile Menu Button -->
      <button id="mobile-menu-btn" class="mobile-menu-btn" aria-label="Toggle menu">
        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
        </svg>
      </button>
    </div>
    
    <!-- Mobile Navigation -->
    <div id="mobile-menu" class="mobile-menu">
      <div class="flex flex-col gap-2 p-4">
        <a href="#about" class="mobile-nav-link">About</a>
        <a href="#work" class="mobile-nav-link">Work</a>
        <a href="#projects" class="mobile-nav-link">Projects</a>
        <a href="#contact" class="mobile-nav-link">Contact</a>
      </div>
    </div>
  </nav>

  <main class="max-w-5xl mx-auto px-6">
    <!-- Hero Section -->
    <section class="min-h-screen flex flex-col justify-center pt-20">
      <div class="space-y-6">
        <h1 class="text-5xl md:text-7xl font-bold text-white leading-tight">
          Hi, I'm <span class="text-blue-500">Vadym</span>
        </h1>
        
        <p class="text-xl md:text-2xl text-zinc-400 max-w-2xl">
          Senior React Native Developer with <span class="text-white font-medium">6+ years</span> of experience 
          in hybrid mobile development. Passionate about delivering crisp UI/UX and rock-solid quality control.
        </p>
        
        <div class="flex flex-wrap gap-3 pt-4">
          {mainTech.map((tech) => (
            <span class="px-3 py-1 bg-zinc-800 rounded-full text-sm text-zinc-300">{tech}</span>
          ))}
        </div>
        
        <div class="flex gap-4 pt-6">
          <a href="#contact" class="px-6 py-3 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-lg transition-colors">
            Get in Touch
          </a>
          <a href="#projects" class="px-6 py-3 bg-zinc-800 hover:bg-zinc-700 text-white font-medium rounded-lg transition-colors">
            View Projects
          </a>
        </div>
      </div>
      
      <!-- Scroll indicator -->
      <div class="absolute bottom-10 left-1/2 -translate-x-1/2 animate-bounce">
        <svg class="w-6 h-6 text-zinc-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
        </svg>
      </div>
    </section>

    <!-- About Section -->
    <section id="about" class="py-24">
      <h2 class="text-3xl font-bold text-white mb-8">About Me</h2>
      <div class="grid md:grid-cols-2 gap-12">
        <div class="space-y-4 text-zinc-400 text-lg leading-relaxed">
          <p>
            I'm a mobile developer from Ukraine with <span class="text-white">6+ years</span> of experience 
            in hybrid mobile development. Expert in <span class="text-white">React Native</span>, <span class="text-white">Expo</span>, TypeScript, 
            and delivering crisp UI/UX with <span class="text-white">Reanimated</span>.
          </p>
          <p>
            Strong background in <span class="text-white">native development</span> — proficient in 
            <span class="text-white">Java, Kotlin, Swift, and Objective-C</span> for building custom 
            native modules, bridging, and deep platform integration.
          </p>
          <p>
            Experienced in <span class="text-white">CI/CD pipelines</span> for mobile apps — from 
            automated builds with GitHub Actions and Fastlane to App Store and Google Play deployments. 
            Driving performance improvements and optimizing development workflows.
          </p>
          <p>
            Besides work, I'm passionate about open-source and Ukrainian game localization.
          </p>
        </div>
        <div class="space-y-6">
          <div>
            <h3 class="text-xl font-semibold text-white mb-4">Core Technologies</h3>
            <div class="grid grid-cols-2 gap-3">
              {technologies.map((tech) => (
                <div class="flex items-center gap-2 text-zinc-400">
                  <span class="w-1.5 h-1.5 bg-blue-500 rounded-full"></span>
                  {tech}
                </div>
              ))}
            </div>
          </div>
          <div>
            <h3 class="text-xl font-semibold text-white mb-4">Mobile CI/CD</h3>
            <div class="flex flex-wrap gap-2">
              {cicdSkills.map((skill) => (
                <span class="px-3 py-1 bg-emerald-500/10 border border-emerald-500/20 rounded-full text-sm text-emerald-400">{skill}</span>
              ))}
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Experience Section -->
    <section id="work" class="py-24">
      <h2 class="text-3xl font-bold text-white mb-8">Experience</h2>
      <div class="space-y-6">
        
        <!-- Current: Shares -->
        <div class="p-8 bg-gradient-to-br from-[#594ff4]/10 to-[#7971f5]/5 border border-[#594ff4]/20 rounded-2xl">
          <div class="flex items-start gap-6">
